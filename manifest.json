{
  "name": "Twitter Translator",
  "version": "0.1.0",
  "manifest_version": 2,
  "description": "Translate tweets in your Twitter feed.",
  "content_scripts": [
    {
		"matches": ["*://*.twitter.com/"],
		"js": ["main.js"],
		"run_at": "document_idle"
	}
	],
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [ "tabs", "*://*.googleapis.com/" ]
}
